<?xml version="1.0" encoding="utf-8"?>
<com.song.sunset.widget.ProgressLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_loadable_fragment_progress"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <in.srain.cube.views.ptr.PtrFrameLayout
        android:id="@+id/id_loadable_fragment_list_swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        cube_ptr:ptr_duration_to_close="200"
        cube_ptr:ptr_duration_to_close_header="1000"
        cube_ptr:ptr_keep_header_when_refresh="true"
        cube_ptr:ptr_pull_to_fresh="false"
        cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"
        cube_ptr:ptr_resistance="1.7">

        <com.song.sunset.comic.widget.RecyclerViewWithHF
            android:id="@+id/id_recyclerview_loadable_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:padding="7dp" />
    </in.srain.cube.views.ptr.PtrFrameLayout>
</com.song.sunset.widget.ProgressLayout>