<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="pickerview">
        <attr name="pickerview_gravity">
            <enum name="center" value="17"/>
            <enum name="left" value="3"/>
            <enum name="right" value="5"/>
        </attr>
        <attr name="pickerview_textSize" format="dimension"/>
        <attr name="pickerview_textColorOut" format="color"/>
        <attr name="pickerview_textColorCenter" format="color"/>
        <attr name="pickerview_dividerColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="SwitchDayNightMode">
        <attr name="windowEnterAnimation" format="dimension"/>
        <attr name="windowExitAnimation" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="SkinnableView">
        <attr name="android:background" />
        <attr name="backgroundTint" />
    </declare-styleable>

    <declare-styleable name="SkinnableTextView">
        <attr name="android:textColor" />
    </declare-styleable>

    <declare-styleable name="SkinnableButton">
        <attr name="android:textColor" />
    </declare-styleable>

    <declare-styleable name="BubblePicker">
        <attr name="maxSelectedCount" format="integer" />
        <attr name="backgroundColor" format="color" />
    </declare-styleable>

</resources>